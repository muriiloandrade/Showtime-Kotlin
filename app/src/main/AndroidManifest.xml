<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.showtime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" android:usesCleartextTraffic="true">

        <activity android:screenOrientation="portrait" android:name=".view.UserCreateActivity">
        </activity>

        <activity android:screenOrientation="portrait" android:name=".view.SeriesDetails">
        </activity>

        <activity android:screenOrientation="portrait" android:name=".view.StatisticsActivity">
        </activity>

        <activity android:screenOrientation="portrait" android:name=".view.UserLoginActivity">
        </activity>

        <activity android:screenOrientation="portrait" android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.GetAllSeriesActivity">
        </activity>
    </application>

</manifest>